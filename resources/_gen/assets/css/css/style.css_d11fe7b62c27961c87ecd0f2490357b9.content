@font-face{font-family:roboto;src:url(./roboto.ttf) format('ttf')}html,body{margin:0;padding:0}body{background:#fff;color:#000;font-family:roboto,sans-serif;cursor:url(/cursor.png),auto;overflow-x:hidden}a{cursor:url(/pointer.png),pointer}*{font-size:calc(1.8vh + 0.9vw);line-height:1em;color:inherit;text-decoration:none;font-weight:700;text-transform:uppercase;list-style:none;margin:0;padding:0;user-select:none}.header{position:fixed;top:0;left:0;width:100%;height:3em;background:#fff}.header .title{left:2em;position:fixed;top:1em}.header .subtitle{position:fixed;top:1em;left:50%;transform:translateX(-50%)}.header .link{position:fixed;top:1em;right:2em}.footer{position:fixed;padding:1em 0;margin:0 2em;left:0;bottom:0;width:calc(100% - 4em);overflow:hidden;background:#fff}.container{width:calc(100% - 4em);height:auto;text-align:left;margin:50vh 2em;overflow:hidden}.container li{display:inline}.container ul:last-of-type li:last-of-type{margin-bottom:0}#newsfeed{white-space:nowrap;animation:news 20s infinite linear}.footer:hover #newsfeed{animation-play-state:paused}@keyframes news{0%{transform:translateX(0%)}100%{transform:translateX(-50%)}}@media(orientation:portrait){.header .title{left:1em}.header .link{right:1em}.footer{margin:0 1em;width:calc(100% - 2em)}.container{width:calc(100% - 2em);margin:50vh 1em}}h2,p{margin-bottom:1em}